  "shortcuts": [
    {
      "name": "Dashboard",
      "description": "Go to your dashboard",
      "url": "/dashboard",
      "icons": [
        {
          "src": "/icons/shortcut-dashboard.png",
          "sizes": "96x96",
          "type": "image/png"
        }
      ]
    },
    {
      "name": "Assignments",
      "description": "View your assignments",
      "url": "/assignments",
      "icons": [
        {
          "src": "/icons/shortcut-assignments.png",
          "sizes": "96x96",
          "type": "image/png"
        }
      ]
    },
    {
      "name": "Attendance",
      "description": "Check attendance records",
      "url": "/attendance",
      "icons": [
        {
          "src": "/icons/shortcut-attendance.png",
          "sizes": "96x96",
          "type": "image/png"
        }
      ]
    },
    {
      "name": "Notifications",
      "description": "View notifications",
      "url": "/notifications",
      "icons": [
        {
          "src": "/icons/shortcut-notifications.png",
          "sizes": "96x96",
          "type": "image/png"
        }
      ]
    }
  ],
  
  "edge_side_panel": {
    "preferred_width": 400
  },
  
  "file_handlers": [
    {
      "action": "/file-handler",
      "accept": {
        "application/pdf": [".pdf"],
        "image/*": [".jpg", ".jpeg", ".png", ".gif", ".webp"],
        "text/plain": [".txt"],
        "application/vnd.openxmlformats-officedocument.wordprocessingml.document": [".docx"]
      }
    }
  ],
  
  "share_target": {
    "action": "/share-handler",
    "method": "POST",
    "enctype": "multipart/form-data",
    "params": {
      "title": "title",
      "text": "text",
      "url": "url",
      "files": [
        {
          "name": "files",
          "accept": ["image/*", "application/pdf", ".txt", ".docx"]
        }
      ]
    }
  },
  
  "protocol_handlers": [
    {
      "protocol": "madrasti",
      "url": "/app?action=%s"
    }
  ],
  
  "prefer_related_applications": false,
  "related_applications": [],
  
  "dir": "rtl",
  "display_override": ["window-controls-overlay", "standalone", "minimal-ui", "browser"],
  
  "launch_handler": {
    "client_mode": "focus-existing"
  }
}